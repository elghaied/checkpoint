{
  "name": "checkpoint",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "Chrome extension to track manga, manhwa, and manhua reading progress",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "chrome-extension",
    "manga",
    "manhwa",
    "manhua",
    "tracker",
    "anilist"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
