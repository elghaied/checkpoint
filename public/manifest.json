{
  "manifest_version": 3,
  "name": "Checkpoint",
  "version": "0.1.0",
  "description": "Track your manga, manhwa, and manhua reading progress",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "scripting",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://graphql.anilist.co/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Checkpoint"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
